@model BlogDotkon.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div class="register-container">
            <form asp-controller="Auth" asp-action="Register" method="post" class="register-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username">Nome</label>
                    <input asp-for="Username" name="Username" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">E-mail</label>
                    <input asp-for="Email" name="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Senha</label>
                    <input asp-for="Password" name="Password" type="password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <br />

                <button type="submit" class="btn btn-primary">Registrar</button>
            </form>

            <p class="login-link">
                Já tem uma conta?
                <a href="@Url.Action("Login", "Auth")" class="login-link-text">Faça login</a>
            </p>


        </div>
    </div>
</body>
</html>
