<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seu Projeto</title>

    <!-- Link para o CSS do Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index", "Post")">Seu Projeto</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Auth")">Sair</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Auth")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Auth")">Registrar</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <!-- Conteúdo principal -->
        <div class="mt-3">
            @RenderBody()  <!-- Aqui será renderizado o conteúdo da view -->
        </div>
    </div>

    <!-- Scripts para o Bootstrap -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
