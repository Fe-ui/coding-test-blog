@model BlogDotkon.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Criar Postagem";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div class="register-container">
            <form asp-controller="Post" asp-action="Create" method="post" class="register-form">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title">Título</label>
                    <input asp-for="Title" name="Title" class="form-control" type="text" required placeholder="Título da postagem" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Content">Conteúdo</label>
                    <textarea asp-for="Content" name="Content" class="form-control" required placeholder="Escreva o conteúdo da postagem"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Criar</button>
                <a href="@Url.Action("Index", "Post")" class="btn btn-warning cancel-btn">Voltar</a>
            </form>

          
           
        </div>
    </div>
</body>
</html>
