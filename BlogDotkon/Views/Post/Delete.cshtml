@model BlogDotkon.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Excluir Postagem";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="post-container">
        <h2>@ViewData["Title"]</h2>

        <p>Tem certeza que deseja excluir a postagem "<strong>@Model.Title</strong>"?</p>

        <form asp-controller="Post" asp-action="DeleteConfirmed" method="post" class="post-form">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" /> <!-- Campo oculto para enviar o ID do post -->

            <div class="form-group">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a href="@Url.Action("Index", "Post")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>